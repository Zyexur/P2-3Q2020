@using Web_App.Helpers;
<script src="~/Scripts/views/vUsuario.js"></script>
@{
    ViewBag.Title = "UsuariosAdmin";
}

@Html.Partial("_Administrador")

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Usuarios</h1>
    </div>

    <div class="row pull-right">
        <div class="col-md-8">Registro de usuarios</div>
        <div class="flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <a type="button" class="btn btn-dark" href="@Url.Action("RegistroAdminGeneralHome", "Home")">Administrador</a>
        </div>
    </div>


    @Html.CtrlTable(viewName: "vUsuario", id: "tblUsuario", title: "Lista de Usuarios",
  columnsTitle: "Cedula,Nombre,Apellido,Correo,Teléfono,Fecha de nacimiento,Estado,Rol",
  ColumnsDataName: "CedulaFisica,Nombre,Apellido,Correo,NumTelefono,FechaNacimiento,EstadoUsuario,Rol",
  onSelectFunction: "BindFields", colorHeader: "white")


    <div class="card border-secondary" style="margin-top: 50px;">
        <div class="card-header">
            <div class="row pull-right">
                <div class="col-md-8">Usuario</div>
                <div class="col-md-4">
                    @Html.CtrlButton(viewName: "vUsuario", id: "btnDelUsuario", label: "Eliminar", onClickFunction: "Delete", buttonType: "danger")
                    @Html.CtrlButton(viewName: "vUsuario", id: "btnActUsuario", label: "Activar", onClickFunction: "Activar", buttonType: "primary")
                    @Html.CtrlButton(viewName: "vUsuario", id: "btnDesUsuario", label: "Desactivar", onClickFunction: "Desactivar", buttonType: "primary")
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="bs-component">
                        <form id="frmDelete">
                            @Html.CtrlInput(id: "txtIdDel", type: "text", label: "Cedula", columnDataName: "CedulaFisica")
                            @Html.CtrlInput(id: "txtNombreDel", type: "text", label: "Nombre", columnDataName: "Nombre")
                            @Html.CtrlInput(id: "txtApellidoDel", type: "text", label: "Apellido", columnDataName: "Apellido")
                            @Html.CtrlInput(id: "txtRolDel", type: "text", label: "Rol", columnDataName: "Rol")
                            @Html.CtrlInput(id: "txtEstadoDel", type: "text", label: "Estado", columnDataName: "EstadoUsuario")
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

